# =============================================================================
# Social Media Forge Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# AI API Keys (Required)
# =============================================================================

# OpenAI API Key for idea generation and research
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key for blog post writing
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Freepik API Key for image generation
# Get your key from: https://www.freepik.com/api
FREEPIK_API_KEY=your_freepik_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection string
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/forge

# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security Settings
# =============================================================================

# Secret key for session encryption (change this in production!)
SESSION_SECRET=your-super-secret-key-change-this-in-production

# Session expiration time in hours
SESSION_EXPIRE_HOURS=24

# =============================================================================
# Admin User Configuration
# =============================================================================

# Default admin user email
ADMIN_EMAIL=admin@example.com

# Default admin user password (change this!)
ADMIN_PASSWORD=JustinIsNotReallySocial%789

# =============================================================================
# Server Configuration
# =============================================================================

# Host to bind the server to
APP_HOST=0.0.0.0

# Port for the FastAPI server
APP_PORT=8000

# Debug mode (set to false in production)
DEBUG=false

# =============================================================================
# Source Filtering Configuration
# =============================================================================

# Source filtering mode: whitelist, blacklist, or allow_all
ALLOWED_SOURCE_MODE=whitelist

# Comma-separated list of allowed/blocked domains
# For whitelist mode, only these sources will be allowed
# For blacklist mode, these sources will be blocked
ALLOWED_SOURCES=bbc.com,cnn.com,reuters.com,apnews.com,nytimes.com,wsj.com,ft.com,techcrunch.com,theverge.com,wired.com

# =============================================================================
# AI Model Configuration
# =============================================================================

# OpenAI model to use for idea generation and research
OPENAI_MODEL=gpt-4o

# Anthropic model to use for blog post writing
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# Celery Configuration
# =============================================================================

# Redis broker URL for Celery (different from main Redis)
CELERY_BROKER_URL=redis://localhost:6379/1

# Redis result backend for Celery
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# Frontend Configuration
# =============================================================================

# Base URL for the API (used by frontend)
NEXT_PUBLIC_API_BASE=http://localhost:8000

# =============================================================================
# Optional: Production Overrides
# =============================================================================

# Uncomment and modify these for production deployment
# DATABASE_URL=postgresql+asyncpg://user:pass@prod-db:5432/forge
# REDIS_URL=redis://prod-redis:6379/0
# SESSION_SECRET=your-production-secret-key
# DEBUG=false
# APP_HOST=0.0.0.0
# APP_PORT=8000
